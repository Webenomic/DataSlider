{
  "name": "@webenomic/data-slider",
  "version": "1.0.0",
  "description": "Dependency-free UI module for creating range slider inputs, seek bars, and progress bars.",
  "main": "dist/data-slider.js",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "less": "^3.9.0",
    "less-plugin-clean-css": "^1.5.1",
    "rollup": "^2.54.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.2.3",
    "uglify-js": "^3.14.0"
  },
  "scripts": {
    "build": "npm run build:js",
    "build:js": "npm run build:js:write && npm run build:js:compress && npm run build:styles",
    "build:js:write": "rollup -c rollup.config.js",
    "build:js:compress": "uglifyjs dist/data-slider.js --compress --mangle --comments --output  dist/data-slider.min.js",
    "build:styles": "npm run build:styles:write && npm run build:styles:compress",
    "build:styles:write": "lessc src/less/data-slider.less dist/data-slider.css",
    "build:styles:compress": "lessc src/less/data-slider.less dist/data-slider.min.css --clean-css",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Webenomic/data-slider.git"
  },
  "keywords": [
    "seekbar",
    "slider",
    "progress-bar",
    "range-sliders",
    "no-dependencies"
  ],
  "author": "Ben Silverman/Webenomic LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Webenomic/data-slider/issues"
  },
  "homepage": "https://github.com/Webenomic/data-slider#readme",
  "dependencies": {
    "lessc": "^1.0.2",
    "npm-watch": "^0.10.0",
    "rollup-plugin-commonjs": "^10.1.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,js,jsx,less"
    }
  }
}
